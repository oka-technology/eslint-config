{
  "extends": ["./tsconfig.react.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "plugins": [{
      "name": "typescript-styled-plugin",
      "lint": {
        "validProperties": [
          "shadow-color",
          "shadow-opacity",
          "shadow-offset",
          "shadow-radius",
          "padding-horizontal",
          "padding-vertical",
          "margin-vertical",
          "margin-horizontal",
          "tint-color",
          "aspect-ratio",
          "elevation"
        ]
      }
    }]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
